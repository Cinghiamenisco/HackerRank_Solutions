    // Complete the reverseArray function below.
    static int[] reverseArray(int[] a) {

        int[] b = new int[a.length];
        int bindex = 0;

        for (int k = a.length-1; k>=0; k--) {
            b[bindex] = a[k];
            bindex++;
        }

        return b;
    }
